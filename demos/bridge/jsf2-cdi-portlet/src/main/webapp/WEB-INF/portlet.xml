<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<portlet>
		<portlet-name>1</portlet-name>
		<display-name>JSF2-CDI</display-name>
		<portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/views/portletViewMode.xhtml</value>
		</init-param>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.edit</name>
			<value>/views/portletEditMode.xhtml</value>
		</init-param>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.help</name>
			<value>/views/portletHelpMode.xhtml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>JSF2-CDI</title>
			<short-title>JSF2-CDI</short-title>
			<keywords>JSF2-CDI</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>datePattern</name>
				<value>MM/dd/yyyy</value>
			</preference>
			<preference>
				<name>recipientEmailAddress</name>
				<value>humanresources@some-company-domain.com</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-publishing-event>
			<qname xmlns:drx="http://draexlmaier.de/events">drx:applicationSubmission</qname>
		</supported-publishing-event>
	</portlet>
	
	
	<portlet>
		<portlet-name>2</portlet-name>
		<display-name>JSF2-CDI-Receive</display-name>
		<portlet-class>com.liferay.faces.demos.portlet.JSDF2CDIReceivePortlet</portlet-class>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/views/receivingPortletViewMode.xhtml</value>
		</init-param>
		<init-param>
			<name>javax.portlet.faces.bridgeEventHandler</name>
			<value>com.liferay.faces.demos.ipc.ApplicationSubmissionBridgeEventHandler</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>JSF2-CDI-Receive</title>
			<short-title>JSF2-CDI-Receive</short-title>
			<keywords>JSF2-CDI-Receive</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-processing-event>
			<qname xmlns:drx="http://draexlmaier.de/events">drx:applicationSubmission</qname>
		</supported-processing-event>		
	</portlet>
	<filter>
		<filter-name>CDIPortletFilter</filter-name>
		<filter-class>com.liferay.faces.demos.filter.FixedCDIPortletFilter</filter-class>
		<lifecycle>ACTION_PHASE</lifecycle>
		<lifecycle>RENDER_PHASE</lifecycle>
		<lifecycle>RESOURCE_PHASE</lifecycle>
		<lifecycle>EVENT_PHASE</lifecycle>
	</filter>
	<filter-mapping>
		<filter-name>CDIPortletFilter</filter-name>
		<portlet-name>1</portlet-name>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CDIPortletFilter</filter-name>
		<portlet-name>2</portlet-name>
	</filter-mapping>
	
	<event-definition>
		<qname xmlns:drx="http://draexlmaier.de/events">drx:applicationSubmission</qname>
		<value-type>java.lang.String</value-type>
	</event-definition>
</portlet-app>
